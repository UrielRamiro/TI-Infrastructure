{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "files": ["src/index.d.ts"]
}
